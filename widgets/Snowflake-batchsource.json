{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Account Name",
          "name": "accountName"
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textbox",
          "label": "Schema",
          "name": "schemaName"
        },
        {
          "widget-type": "textbox",
          "label": "Warehouse",
          "name": "warehouse"
        },
        {
          "widget-type": "textbox",
          "label": "Role",
          "name": "role"
        },
        {
          "widget-type": "textarea",
          "label": "Import Query",
          "name": "importQuery",
          "plugin-function": {
            "label": "Get Schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "omit-properties": [
              {
                "name": "schema"
              }
            ]
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "Key Pair Authentication",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Key Pair Authentication Enabled",
          "name": "keyPairEnabled",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "textarea",
          "label": "Private Key",
          "name": "privateKey"
        },
        {
          "widget-type": "password",
          "label": "Key File Passphrase",
          "name": "passphrase"
        }
      ]
    },
    {
      "label": "OAuth2",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "OAuth2 Enabled",
          "name": "oauth2Enabled",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "textbox",
          "label": "Client ID",
          "name": "clientId"
        },
        {
          "widget-type": "password",
          "label": "Client Secret",
          "name": "clientSecret"
        },
        {
          "widget-type": "textbox",
          "label": "Refresh Token",
          "name": "refreshToken"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "number",
          "label": "Maximum Split Size",
          "name": "maxSplitSize",
          "widget-attributes": {
            "min": "0",
            "default": "0"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Connection Argument",
            "value-placeholder": "Connection Argument Value"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-default-type": "string",
        "schema-types": [
          "boolean",
          "bytes",
          "date",
          "double",
          "decimal",
          "string",
          "time",
          "timestamp",
          "array",
          "record"
        ]
      }
    }
  ],
  "filters": [
    {
      "name": "KeyPairAuthenticationEnabledFilter",
      "condition": {
        "property": "keyPairEnabled",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name": "privateKey",
          "type": "property"
        },
        {
          "name": "passphrase",
          "type": "property"
        }
      ]
    },
    {
      "name": "OAuth2EnabledFilter",
      "condition": {
        "property": "oauth2Enabled",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name": "clientId",
          "type": "property"
        },
        {
          "name": "clientSecret",
          "type": "property"
        },
        {
          "name": "refreshToken",
          "type": "property"
        }
      ]
    }
  ]
}
